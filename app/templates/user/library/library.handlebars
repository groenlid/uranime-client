<div class="content container">
  <ul class="breadcrumb">
    <li>
      {{#linkTo "user.profile" controllers.user.content}}
        {{controllers.user.content.nick}}
      {{/linkTo}}
    </li>
    <li class="active">Library</li>
  </ul>

<div class="row">
  <div class="pull-left">
    <div class="btn-group">
		<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
			Sort by
			<span class="caret"></span>
		</a>
		<ul class="dropdown-menu">
			<!-- dropdown menu links -->
      {{#each btn in controller.sortButtons}}
        <li><a {{action setSorting btn target="controller"}} class="clickable">{{btn.title}}</a></li>
      {{/each}}
		</ul>
	</div>
	</div>
    <div class="btn-group pull-left" style="margin-left:10px;">
      <a class="btn">
          <i class="glyphicon glyphicon-th"></i>
      </a>
      <a class="btn">
          <i class="glyphicon glyphicon-th-large"></i>
      </a>
      <a class="btn">
          <i class="glyphicon glyphicon-th-list"></i>
      </a>
    </div>
    <div class="span4 pull-right">
      <ul style="list-style-type: none;">
        <li>
          <i class="glyphicon glyphicon-time"></i> {{controller.seenTime}} spent watching anime
        </li>
        <li>
          <i class="glyphicon glyphicon-eye-open"></i> {{controller.seenEpisodes}} episodes seen
        </li>
        <li>
          <i class="glyphicon glyphicon-film"></i> {{controller.content.length}} anime seen
        </li>
      </ul>
    </div>
  </div>
<div class="anime-gallery anime-library row">

{{#each item in controller.pagedContent}}

  <div class="anime-gallery gallery-poster pull-left">
    <div class="gallery-image">
      {{#linkTo "anime.description" item.anime}}
        <img {{bindAttr src="item.anime.imageURL"}}>
        {{#if item.incomplete}}
        <div class="backdrop">
          <div class="unseen-episodes">{{item.progress}}/{{item.total}}</div>
          <div class="smallprogress">
            <div class="smallprogress-filled" {{bindAttr style="item.percentStyle"}}>
            </div>
          </div>
        </div>
        {{/if}}
      {{/linkTo}}
    </div>
    <p>{{item.anime.title}}</p>
  </div>

{{/each}}
</div>

{{view App.PaginatorCollectionView contentBinding="controller.paginator"}}
<br class="clear">

</div>
