<div class="col-lg-8 pull-right content">
    {{#if showImage}}
	<div class="anime-gallery request">
        <img {{bindAttr src="fanart"}}/>
	</div>
    {{/if}}

	<h2>{{title}}</h2>
	<div class="row">
        {{#if poster}}
            <div class="col-lg-4 pull-left">
                <img {{bindAttr src="poster"}} />
            </div>
        {{/if}}
        <div {{bindAttr class="poster:col-lg-7:col-lg-12"}}>
            {{#unless emptyRequestInfo}}
    		<table class="table table-striped table-small col-lg-12">
    			<thead>
                    <tr>
                        <th class="col-lg-3">Site</th>
                        <th class="col-lg-3">Season/Episodes</th>
                        <th class="col-lg-3">Comment</th>
                        <th class="col-lg-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each info in request_info}}
                        {{#each attribute in info.request_attributes}}

                            <tr>
                                <td {{bindAttr class="info.scrape_id::muted"}}>
                                {{#if info.scrape_id}}
                                    <a {{bindAttr href="info.site.url"}}>{{info.site.name}}</a>
                                {{else}}
                                    {{info.site.name}}
                                {{/if}}
                                </td>
                                <td>{{attribute.value}}</td>
                                <td><i class="icon-comment"></i></td>
                                <td><i class="icon-edit"></i> Edit</td>
                            </tr>

                        {{/each}}
                    {{/each}}
                </tbody>
    		</table>
            {{/unless}}
        </div>
	</div>
	<hr />
</div>