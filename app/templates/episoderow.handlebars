<div class="row-fluid episodelist">
    <div class="gallery-episode pull-left span2">
        <div class="gallery-image">
            <a {{action showEpisode view.content target="view"}}>
            <img {{bindAttr src="view.content.imageURL"}} /></a>
        </div>
    </div>
    <div class="span8 episode-info">
        <div class="row-fluid">
            <h4 class="span8">
                <a {{action showEpisode view.content target="view"}}>#{{view.content.number}} - {{view.content.name}}</a>
            </h4>
            <p class="subtle pull-right">{{view.content.parseAired}}</p>
        </div>
        <p>{{view.content.shortDescription}}</p>
    </div>
</div>
<hr>    