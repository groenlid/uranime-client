      <div class="modal-footer">
        <p class="animedesc">
          {{description}}
        </p>
      </div>
    </div>
    <div class="span6">
      
      <div class="modal-header">
        <button type="button" class="close" rel="close" data-dismiss="modal" aira-hidden="true">&times;</button>
        <h2><span class="bold">Last</span> activity {{userepisode.length}}</h2>
      </div>

      <div class="comments js-commentsHeight">
        {{#each activity in arrangedUserEpisode}}

          <div class="row-fluid">
              <img class="img-rounded pull-left" {{bindAttr src="activity.user.smallGravatar"}}>
            <div class="span10">  
                <a href="#" class="bold">{{activity.user.nick}}</a> watched this.<span class="pull-right bold small grey">{{activity.since}}</span> 
            </div>
          </div>
          <hr/>

