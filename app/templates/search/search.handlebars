<div class="container content infobar searchBar">
<div class="row">
        <h1 class="col-lg-6"><span class="normal">Found</span> {{controller.content.length}} <span class="normal">results matching your query</span></h1>
        <div class="btn-group pull-right" style="margin-left:10px;">
            {{#each viewTypes}}
                <a class="btn" {{action changeViewType this target="controller"}}>
                    <i {{bindAttr class="icon"}}></i>
                </a>
            {{/each}}
        </div>
        <div class="col-lg-2 pull-right">
            <div class="col-lg-5 line-height-input">Sort by: </div>
            <div class="col-lg-7">
            {{view Ember.Select 
                contentBinding="sortTypes" 
                optionLabelPath="content.label"
                optionValuePath="content.value"
                selectionBinding="chosenSort"
            }}</div>
        </div>
    </div>
</div>

<div class="container content">
  {{view App.AnimeListView viewTypeBinding="controller.searchResults.viewType" contentBinding="controller"}}
<div class="clear"></div>
</div>